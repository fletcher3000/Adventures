<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Cost</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id %></td>
        <td><%= activity.name %></td>
        <td><%= activity.cost %></td>
        <td><%= activity.duration %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
<% @activity_pics.shuffle.each do |pic| %>
  <%= image_tag pic, class: 'img-responsive' %>
<% end %>
</tbody>
</table>

<br>
<button class="btn btn-primary" type="submit">Button</button>
<button class="btn btn-success" type="submit">Button</button>
<button class="btn btn-warning" type="submit">Button</button>
<button class="btn btn-danger" type="submit">Button</button>
<%= link_to 'New Activity', new_activity_path %>
